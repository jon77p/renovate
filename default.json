{
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": ["renovate"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "extends": [
        "packages:lintes"
      ],
      "automerge": true
    }
  ],
  "pinDigest": true,
  "respectLatest": true,
  "reviewersFromCodeOwners": true,
  "commitBody": "Signed-off-by: {{{gitAuthor}}}",
  "npm": {
    "enabled": true
  },
  "gomod": {
    "enabled": true
  },
  "docker": {
    "enabled": true,
    "pinDigests": true
  },
  "docker-compose": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
