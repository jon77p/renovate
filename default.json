{
  "extends": [
    "config:base"
  ],
  "labels": ["renovate"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "reviewersFromCodeOwners": true
}
